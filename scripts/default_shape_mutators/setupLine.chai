def setupLine(shape) {
    var first = randomInRange(0, xBound - 1);
    var second = randomInRange(0, yBound - 1);

    shape.m_x1 = clamp(first + randomInRange(-32, 32), 0, xBound - 1);
    shape.m_y1 = clamp(second + randomInRange(-32, 32), 0, yBound - 1);
    shape.m_x2 = clamp(first + randomInRange(-32, 32), 0, xBound - 1);
    shape.m_y2 = clamp(second + randomInRange(-32, 32), 0, yBound - 1);
}
